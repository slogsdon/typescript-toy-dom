{
  "name": "typescript-toy-dom",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "jsnext:main": "lib/index.js",
  "typings": "lib/index",
  "types": "lib/index",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/slogsdon/typescript-toy-dom.git"
  },
  "files": ["dist", "lib", "LICENSE", "README.md"],
  "scripts": {
    "build": "tsc && rollup --config rollup.config.js",
    "clean": "rm -rf .rpt2_cache dist lib",
    "docs": "typedoc --out docs src",
    "format":
      "prettier --config .prettierrc --write '**/*.ts' '**/*.tsx' '**/*.json'",
    "prepublish": "npm run clean && npm run build",
    "test": "tslint --project tsconfig.json"
  },
  "devDependencies": {
    "prettier": "^1.11.1",
    "rollup": "^0.56.5",
    "rollup-plugin-typescript2": "^0.12.0",
    "rollup-plugin-uglify": "^3.0.0",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.0",
    "typedoc-plugin-external-module-name": "^1.1.1",
    "typescript": "^2.7.2"
  }
}
